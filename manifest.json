  "screenshots": [
    {
      "src": "screenshots/screenshot1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Tela principal do ESCRITY"
    },
    {
      "src": "screenshots/screenshot2.png",
      "sizes": "750x1334",
      "type": "image/png",
      "platform": "narrow",
      "label": "Visualização mobile"
    }
  ],
  
  "shortcuts": [
    {
      "name": "Nova Folha",
      "short_name": "Nova",
      "description": "Criar uma nova folha",
      "url": "./index.html?action=new",
      "icons": [
        {
          "src": "icons/shortcut-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Meus Cadernos",
      "short_name": "Cadernos",
      "description": "Ver todos os cadernos",
      "url": "./index.html?action=notebooks",
      "icons": [
        {
          "src": "icons/notebook-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Música Ambiente",
      "short_name": "Música",
      "description": "Abrir player de música",
      "url": "./index.html?action=music",
      "icons": [
        {
          "src": "icons/music-96x96.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  
  "related_applications": [],
  
  "protocol_handlers": [
    {
      "protocol": "web+escry",
      "url": "./index.html?data=%s"
    }
  ],
  
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  
  "handle_links": "preferred",
  
  "share_target": {
    "action": "./index.html?share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "audio/*", "text/*"]
        }
      ]
    }
  },
  
  "file_handlers": [
    {
      "action": "./index.html?import",
      "accept": {
        "application/json": [".escry"],
        "text/plain": [".txt", ".md"],
        "application/pdf": [".pdf"]
      }
    }
  ]
}